{% extends 'components/fullscreen_modal.html.twig' %}
{% set modal =
  {
    'id': 'profile-settings-modal',
    'title': '' ~ 'myprofile.profileSettings'|trans({}, 'catroweb'),
    'left_action':
    {
      'id': 'profile_settings-cancel_action',
      'icon': 'close',
      'label': '' ~ 'cancel'|trans({}, 'catroweb'),
      'dismiss': true
    },
    'right_action':
    {
      'id': 'profile_settings-save_action',
      'icon': 'done',
      'label': '' ~ 'myprofile.done'|trans({}, 'catroweb'),
      'dismiss': false
    }
  }
%}
{% block content %}
  <form id="profile-settings-form" class="form-horizontal" role="form">
    {% include 'components/text_field.html.twig' with {
      'text_field':
      {
        'id': 'username',
        'label': '' ~ 'username'|trans({}, 'catroweb'),
        'value': username,
        'name': '_username',
        'leading_icon': 'person',
        'tabindex': 1
      }
    } %}

    {% include 'components/text_field.html.twig' with {
      'text_field':
      {
        'id': 'email',
        'label': '' ~ 'email'|trans({}, 'catroweb'),
        'value': firstMail,
        'name': '_email',
        'leading_icon': 'email',
        'tabindex': 2
      }
    } %}

    {% include 'components/text_field.html.twig' with {
      'text_field':
      {
        'id': 'status',
        'label': '' ~ 'profile.currentlyWorkingOn'|trans({}, 'catroweb'),
        'value': 'Status',
        'name': '_status',
        'leading_icon': 'schedule',
        'required': false,
        'tabindex': 3
      }
    } %} {# TODO: insert variable #}

    {% include 'components/text_area.html.twig' with {
      'text_area':
      {
        'id': 'about',
        'label': '' ~ 'profile.aboutMe'|trans({}, 'catroweb'),
        'value': 'Hi, my name is Irving and I love developing games with Pocket Code! Check out my newest game: Very cool Game!!',
        'name': 'about',
        'leading_icon': 'description',
        'rows': '4',
        'mb': 'mb-4'
      }
    }%} {# TODO: insert variable #}

  </form>
{% endblock %}
